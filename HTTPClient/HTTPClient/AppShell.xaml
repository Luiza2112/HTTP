<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HTTPClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HTTPClient.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="HTTPClient">

    <TabBar>
        <ShellContent
        Title="Listar Postagens"
        ContentTemplate="{DataTemplate local:PostView}"
        Route="PostView" />
        <ShellContent
        Title="Criar postagens"
        ContentTemplate="{DataTemplate local:PostView}"
        Route="CreatePostView" />
    </TabBar>

</Shell>
